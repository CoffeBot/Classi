        this.*;
    }

    public static void registrazione()
    {
    
    }
    
    public static void login()
    {
         System.out.println("1)Benvenuto: Immetti i tuoi dati: user o admin \n"); //controllo tipo di persona che accede
        String nome;
        Scanner scan = new Scanner(System.in); //prende l'input 
        nome = scan.nextLine();

        if (nome.equals("user")) {
            UtenteValidato utenteValidato=new UtenteRegistrato("user","user","fhdhf","user@user","visa");
            utentivalidati.add(utenteValidato); //aggiunta dell'utente nella lista di utenti collegati
    }
    
    public static void logout()
    {
    
}

}
